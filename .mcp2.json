{
  "mcpServers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp"
    },
    "shadcn": {
      "command": "cmd",
      "args": ["/c", "npx", "shadcn@latest", "mcp"]
    },
    "sequential-thinking": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "microsoft-playwright-mcp": {
      "type": "stdio",
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@smithery/cli@latest",
        "run",
        "@microsoft/playwright-mcp",
        "--key",
        "838015de-2dce-406c-99aa-d2df82c53ea5"
      ],
      "env": {}
    },
    "supabase": {
      "type": "http",
      "url": "https://mcp.supabase.com/mcp",
      "description": "Supabase PostgreSQL database operations - OAuth authentication",
      "enabled": true
    },
    "Sentry": {
      "type": "http",
      "url": "https://mcp.sentry.dev/mcp",
      "description": "Sentry error monitoring and performance tracking",
      "enabled": true
    }
  }
}
